<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InFoAppActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/title_information"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:src="@drawable/bkhn" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerInParent="true"
            android:gravity="start"
            android:shadowColor="#949EA6"
            android:shadowDx="-1"
            android:shadowDy="-5"
            android:shadowRadius="15"
            android:text="Student Manager"
            android:textAlignment="textStart"
            android:textColor="#D11010"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout1"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/imageView2"
                android:text=" -THÔNG TIN"
                android:textColor="#FF0404"
                android:textSize="24dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/imageView2"
                android:text="- Đại học Bách khoa Hà Nội (tên trong tiếng Anh: Hanoi University of Science and Technology - HUST) là đại học chuyên ngành kỹ thuật đầu ngành tại miền Bắc Việt Nam, một trong những đại học lớn nhất Việt Nam, trực thuộc Bộ Giáo dục và Đào tạo và được xếp vào nhóm các đại học trọng điểm quốc gia Việt Nam."
                android:textSize="20dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/tv_web_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="60dp"
                android:textColor="#FF0000"
                android:layout_toRightOf="@id/imageView2"
                android:text="Web: https://hust.edu.vn/"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>