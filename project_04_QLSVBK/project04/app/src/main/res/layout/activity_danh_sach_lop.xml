<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:context=".DanhSachLopActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/toolbar"
                layout="@layout/title_dslop" />

            <EditText
                android:id="@+id/edtserchLop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"

                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:hint="Nhập tên lớp cần tìm"
                android:padding="15dp"
                android:textColorHint="#000" />


            <ListView
                android:id="@+id/listviewLop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/edtserchLop"
                android:layout_marginBottom="57dp"
                tools:listitem="@layout/item_lop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    tools:context=".DanhSachSinhVien">


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fbDangXuatLop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginLeft="160dp"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/icondangxuat"
                        app:backgroundTint="#949EA6"
                        app:fabSize="mini" />


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fbHomeLop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginLeft="160dp"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/ic_home"
                        app:backgroundTint="#949EA6"
                        app:fabSize="mini" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fbThemLop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginLeft="160dp"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/add64"
                        app:backgroundTint="#949EA6"
                        app:fabSize="mini" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginLeft="160dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_add"
                        app:backgroundTint="#D11010"
                        app:fabSize="normal" />


                </FrameLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/tvAnHien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Không có lớp trong danh sách"
                android:textColor="#FFFFFF"
                android:visibility="invisible" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>